<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    android:background="@drawable/custom_semi_rounded_branco"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data:"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/azulPrimaryPress"
            />
        <TextView
            android:id="@+id/textDataIndicacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00/00/00"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/preto"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criptomoeda:"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/azulPrimaryPress"
            />
        <TextView
            android:id="@+id/textCriptomoedaIndicacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bitcoin"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/preto"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Observação:"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/azulPrimaryPress"
            />
        <TextView
            android:id="@+id/textObservacaoIndicacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdasda sdasdasdasqw eqw asd asdasdqw asd asdwqe asd adwqd asd"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/preto"
            />

    </LinearLayout>
</LinearLayout>