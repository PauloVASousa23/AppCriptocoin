<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/list_item_transacoes_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_semi_rounded_vermelho"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criptomoeda:"
            android:textStyle="bold"
            android:textColor="@color/preto"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/list_item_transacoes_criptomoeda"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome:"
            android:textStyle="bold"
            android:textColor="@color/preto"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/list_item_transacoes_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor:"
                android:textStyle="bold"
                android:textColor="@color/preto"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/list_item_transacoes_valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data:"
                android:textStyle="bold"
                android:textColor="@color/preto"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/list_item_transacoes_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>