<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".agencia.AgenciaActivity">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/azulLight"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                    android:layout_gravity="center"
                >
                <LinearLayout
                    android:id="@+id/btnClientes_agencia_principal"
                    android:layout_width="0dp"
                    android:layout_weight=".50"
                    android:layout_height="180dp"
                    android:background="@drawable/custom_card_azul"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical"
                    android:elevation="5dp"
                    android:clickable="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:background="@mipmap/icone_clientes"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:background="@drawable/custom_card_branco_rounded"
                        >
                        <TextView
                            android:id="@+id/tempPermissao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Clientes"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/azulPrimary"
                            android:textSize="25dp"
                            android:textAlignment="center"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnTransacoes_agencia_principal"
                    android:layout_width="0dp"
                    android:layout_weight=".50"
                    android:layout_height="180dp"
                    android:background="@drawable/custom_card_azul"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical"
                    android:elevation="5dp"
                    android:clickable="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:background="@mipmap/icone_transacoes"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:background="@drawable/custom_card_branco_rounded"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Transações"
                            android:textColor="@color/azulPrimary"
                            android:textSize="25dp"
                            android:textAlignment="center"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >
                    <LinearLayout
                        android:id="@+id/btnRelatorios_agencia_principal"
                        android:layout_width="0dp"
                        android:layout_weight=".50"
                        android:layout_height="180dp"
                        android:background="@drawable/custom_card_azul"
                        android:layout_marginHorizontal="20dp"
                        android:orientation="vertical"
                        android:elevation="5dp"
                        android:clickable="true"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                >
                                <ImageView
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:background="@mipmap/icone_relatorios"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:background="@drawable/custom_card_branco_rounded"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Relatórios"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/azulPrimary"
                                android:textSize="25dp"
                                android:textAlignment="center"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btnIndicacoes_agencia_principal"
                        android:layout_width="0dp"
                        android:layout_weight=".50"
                        android:layout_height="180dp"
                        android:background="@drawable/custom_card_azul"
                        android:layout_marginHorizontal="20dp"
                        android:orientation="vertical"
                        android:elevation="5dp"
                        android:clickable="true"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                >
                                <ImageView
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:background="@mipmap/icone_indicacoes"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:background="@drawable/custom_card_branco_rounded"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Indicações"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/azulPrimary"
                                android:textSize="25dp"
                                android:textAlignment="center"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="70dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >

                    <LinearLayout
                        android:id="@+id/btnMonitoramento_agencia_principal"
                        android:layout_width="0dp"
                        android:layout_weight=".50"
                        android:layout_height="180dp"
                        android:background="@drawable/custom_card_azul"
                        android:layout_marginHorizontal="20dp"
                        android:orientation="vertical"
                        android:elevation="5dp"
                        android:clickable="true"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                >
                                <ImageView
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:background="@mipmap/icone_monitoramento"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:background="@drawable/custom_card_branco_rounded"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Monitoramento"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/azulPrimary"
                                android:textSize="25dp"
                                android:textAlignment="center"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_bottom_navigation_bar"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/llbtnClientes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:orientation="horizontal"
            android:background="@drawable/custom_bottom_navigation_item"
            android:clickable="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/icone_clientes"></ImageView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llbtnTransacoes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:orientation="horizontal"
            android:background="@drawable/custom_bottom_navigation_item"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="49dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/icone_transacoes"></ImageView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llbtnRelatorios"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:orientation="horizontal"
            android:background="@drawable/custom_bottom_navigation_item"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/icone_relatorios"></ImageView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llbtnMonitoramento"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:orientation="horizontal"
            android:background="@drawable/custom_bottom_navigation_item"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/icone_monitoramento"></ImageView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llbtnIndicacoes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:orientation="horizontal"
            android:background="@drawable/custom_bottom_navigation_item"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/icone_indicacoes"></ImageView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>