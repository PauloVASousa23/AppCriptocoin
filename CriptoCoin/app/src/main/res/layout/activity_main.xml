<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_background_login"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >


            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@drawable/custom_login_logo"
                android:elevation="5dp"
                >
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="200px"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="200px"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/marca"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textSize="35dp"
                            android:textStyle="bold"
                            android:textColor="@color/amareloPrimary"
                         />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_login"
                    android:orientation="vertical"
                    android:textAlignment="center"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Acesse"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="80px"
                        android:textStyle="bold"
                        android:textColor="@color/azulPrimary"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_input_basic"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        >
                        <LinearLayout
                            android:layout_width="180px"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_input_icon"
                            android:orientation="horizontal"
                            >
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="vertical"
                               android:layout_gravity="center"
                               >
                               <ImageView
                                   android:layout_width="30dp"
                                   android:layout_height="30dp"
                                   android:background="@mipmap/icone_person"
                                   android:layout_gravity="center"
                                   />

                           </LinearLayout>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/inputUsuario_Login"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20px"
                            android:layout_marginRight="60px"
                            android:layout_marginTop="20px"
                            android:layout_marginBottom="20px"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:textSize="20dp"
                            android:hint="Usuario"
                            android:background="@color/branco"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_input_basic"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        >
                        <LinearLayout
                            android:layout_width="180px"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_input_icon"
                            android:orientation="horizontal"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                >
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@mipmap/icone_cadeado"
                                    android:layout_gravity="center"
                                    />

                            </LinearLayout>
                        </LinearLayout>

                        <EditText
                            android:id="@+id/inputSenha_Login"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20px"
                            android:layout_marginTop="20px"
                            android:layout_marginRight="60px"
                            android:layout_marginBottom="20px"
                            android:background="@color/branco"
                            android:ems="10"
                            android:hint="Senha"
                            android:inputType="textPassword"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnEntrar_Login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120px"
                        android:layout_marginTop="50px"
                        android:layout_marginRight="120px"
                        android:background="@drawable/custom_button_rounded_amarelo"
                        android:text="Entrar"
                        android:textColor="@color/azulPrimary"
                        android:textStyle="bold"
                        android:elevation="50dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_box_cadastrar"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="NÃ£o tem uma conta?"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textSize="60px"
                            android:textStyle="bold"
                            android:textColor="@color/azulPrimary"
                            />

                        <Button
                            android:id="@+id/btnCadastrar_Login"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="120px"
                            android:layout_marginTop="50px"
                            android:layout_marginRight="120px"
                            android:background="@drawable/custom_button_rounded_azulprimary"
                            android:text="Cadastrar-se"
                            android:textColor="@color/branco"
                            android:textStyle="bold"
                            android:elevation="50dp"
                            />
                    </LinearLayout>
                </LinearLayout>
        </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>